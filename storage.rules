
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Autorise la lecture et l'écriture pour tous les utilisateurs authentifiés sur tous les fichiers.
    // Ceci est nécessaire pour que notre script puisse lister les URLs des images.
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Gardé pour la cohérence, mais la lecture est la clé ici.
    }
  }
}
